# Example environment file
# Copy this to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ================================
# BLOCKCHAIN CONFIGURATION
# ================================
# Your wallet's private key (without 0x prefix or with it)
PRIVATE_KEY=your_private_key_here

# Alternative: You can also use MNEMONIC instead of PRIVATE_KEY
# MNEMONIC=your twelve word mnemonic phrase here

# ================================
# NETWORK CONFIGURATION
# ================================
# RPC URLs (these are public and safe to include)
GNOSIS_RPC_URL=https://rpc.gnosischain.com
CHIADO_RPC_URL=https://rpc.chiadochain.net

# ================================
# CONTRACT ADDRESSES
# ================================
# These are public addresses and safe to include
BEERCOIN_ADDRESS=0x5CcC0D40017aE800f7b432e9E76b4d31572A240B
DISTRIBUTOR_ADDRESS=0x9E6233c16288949728b94FF134db1453AFfa49B4

# ================================
# API KEYS (if needed)
# ================================
# Etherscan API key (optional, for contract verification)
# ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Infura or Alchemy API key (optional, for alternative RPC)
# INFURA_API_KEY=your_infura_api_key_here
# ALCHEMY_API_KEY=your_alchemy_api_key_here

# ================================
# DEVELOPMENT/TESTING
# ================================
# Set to 'development' or 'production'
NODE_ENV=development

# Enable debug logging
DEBUG=false
